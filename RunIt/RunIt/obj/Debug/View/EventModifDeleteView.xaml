<Page
    x:Class="RunIt.View.EventModifDeleteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RunIt.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,116,0,0"
            Text="Event"
            VerticalAlignment="Top"
            FontSize="21.333"/>
        <TextBox
            x:Name="eventBox"
            Margin="0,147,0,0"
            VerticalAlignment="Top"
            Width="309"/>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,216,0,0"
            Text="Description"
            VerticalAlignment="Top"
            FontSize="21.333"/>
  
        <TextBox
            x:Name="descriptionBox"
            Margin="0,247,0,0"
            VerticalAlignment="Top"
            Width="309"/>

        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,316,0,0"
            Text="City"
            VerticalAlignment="Top"
            FontSize="21.333"/>
        <TextBox
            x:Name="cityBox"
            Margin="0,347,0,0"
            VerticalAlignment="Top"
            Width="309"/>

        <Button x:ConnectionId='1'
            x:Name="editEvtBtn"
            Content="Edit"
            HorizontalAlignment="Left"
            Margin="134,422,0,0"
            VerticalAlignment="Top"
                                       />
        <Button x:ConnectionId='2'
            x:Name="delCmtBtn"
            Content="Delete"
            HorizontalAlignment="Left"
            Margin="134,520,0,0"
            VerticalAlignment="Top"
                                         />

        <Button x:ConnectionId='3'
            x:Name="backBtn"
            Content="Back"
            HorizontalAlignment="Left"
            Margin="257,21,0,0"
            VerticalAlignment="Top"
                               />
    </Grid>

</Page>

