<Page   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RunIt.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:RunIt.ViewModel"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    xmlns:drawerLayout="using:DrawerLayout"  

    x:Class="RunIt.View.MainView"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
    <Page.Resources>
        <ViewModel:ViewModelLocator x:Key="ViewModelLocatorDataSource" d:IsDataSource="True"/>
    </Page.Resources>

    <Grid DataContext="{Binding Source={StaticResource ViewModelLocatorDataSource}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="TitleBar" Grid.Row ="0" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image x:ConnectionId='5' Margin="5"  x:Name="DrawerIcon"  Grid.Column="0" Source="/Assets/drawer_icon.png" HorizontalAlignment="Left"                            />
            <TextBlock Grid.Column="1" Text="RunIT" Foreground="White" VerticalAlignment="Center" FontSize="18"/>
        </Grid>

        <drawerLayout:DrawerLayout Grid.Row="1"  x:Name="DrawerLayout">
            <Grid x:Name="MainFragment">

                <TextBlock x:Name="TimeValue"
                   HorizontalAlignment="Center"
                   Margin="0,93,0,0"
                   TextWrapping="Wrap"
                   FontSize="25"
                   Text="00:00:00"
                   VerticalAlignment="Top"/>

                <TextBlock x:Name="TimeBlock"
                   HorizontalAlignment="Center" 
                   Margin="0,123,0,0" 
                   TextWrapping="Wrap" 
                   FontSize="20"
                   Text="Time" 
                   VerticalAlignment="Top"/>

                <TextBlock x:Name="CalorieValue"
                   HorizontalAlignment="Left"
                   Margin="98,150,0,0" 
                   TextWrapping="Wrap" 
                   FontSize="25"
                   Text="0"
                   VerticalAlignment="Top"/>

                <TextBlock x:Name="CalorieBlock"
                   HorizontalAlignment="Left"
                   Margin="52,180,0,0"
                   TextWrapping="Wrap"
                   FontSize="20"
                   Text="Calorie (KCal)"
                   VerticalAlignment="Top"/>

                <TextBlock x:Name="DistanceValue"
                   HorizontalAlignment="Right"
                   Margin="0,150,102,0" 
                   TextWrapping="Wrap" 
                   FontSize="25"
                   Text="0"
                   VerticalAlignment="Top"/>

                <TextBlock x:Name="DistanceBlock"
                   HorizontalAlignment="Right"
                   Margin="0,180,44,0"
                   TextWrapping="Wrap"
                   FontSize="20"
                   Text="Distance"
                   VerticalAlignment="Top"/>

                <Maps:MapControl
                    x:Name="xMap"
                    Margin="0,228,0,41"
                    RenderTransformOrigin="0.504,0.397"/>

                <Button x:ConnectionId='2'
                    x:Name="PlayButton"
                    Content="Play"
                    HorizontalAlignment="Left"
                    Margin="0,530,0,-9"
                    Height="60"
                    Width="400"
                                          />

                <Button x:ConnectionId='3'
                    x:Name="StopButton"
                    Visibility="Collapsed"
                    Content="Finish"
                    HorizontalAlignment="Left"
                    Margin="0,530,0,-9"
                    Height="60"
                    Width="200"
                                          />

                <Button x:ConnectionId='4'
                    x:Name="PauseButton"
                    Visibility="Collapsed"
                    Content="Pause"
                    HorizontalAlignment="Right"
                    Margin="0,530,0,-9"
                    Height="60"
                    Width="200"
                                           />
<!--
                <TextBlock 
                    x:Name="GradeBlock" 
                    HorizontalAlignment="Left" 
                    Margin="285,00,0,0" 
                    TextWrapping="Wrap" 
                    Text="Grade" 
                    FontSize="20"
                    VerticalAlignment="Top"/>

                <TextBlock 
                    x:Name="xGrade" 
                    HorizontalAlignment="Left" 
                    Margin="285,30,0,0" 
                    TextWrapping="Wrap" 
                    Text="" 
                    FontSize="20"
                    VerticalAlignment="Top"/>
-->
            </Grid>
            <Grid x:Name="ListFragment" Background="#F4F4F4">

                <ListView x:ConnectionId='1' x:Name="ListMenuItems"                                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="30" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" Foreground="Black" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>
        </drawerLayout:DrawerLayout>

    </Grid>

</Page>

