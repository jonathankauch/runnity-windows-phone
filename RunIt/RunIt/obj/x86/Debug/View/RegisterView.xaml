<Page
    x:Class="RunIt.View.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RunIt.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,80,0,0"
            Text="Email (*)"
            VerticalAlignment="Top"
            FontSize="21.333"/>
        <TextBox
            x:Name="emailBox"
            Margin="0,120,0,0"
            VerticalAlignment="Top"
            Width="309"/>

        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,180,0,0"
            Text="First name (*)"
            VerticalAlignment="Top"
            FontSize="21.333"/>
        <TextBox
            x:Name="firstnameBox"
            Margin="0,220,0,0"
            VerticalAlignment="Top"
            Width="309"/>

        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,280,0,0"
            Text="Last name (*)"
            VerticalAlignment="Top"
            FontSize="21.333"/>
        <TextBox
            x:Name="lastnameBox"
            Margin="0,320,0,0"
            VerticalAlignment="Top"
            Width="309"/>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,380,0,0"
            Text="Password (*)"
            VerticalAlignment="Top"
            FontSize="21.333" />
        <PasswordBox
            x:Name="passwordBox"
            Margin="0,420,0,0"
            VerticalAlignment="Top"
            Width="309"/>
        <TextBlock
            HorizontalAlignment="Left"
            Margin="46,480,0,0"
            Text="Phone"
            VerticalAlignment="Top"
            FontSize="21.333" />
        <TextBox
            x:Name="phoneBox"
            Margin="0,520,0,0"
            VerticalAlignment="Top"
            Width="309"/>
        <Button x:ConnectionId='1'
            x:Name="registerBtn"
            Content="Register"
            HorizontalAlignment="Left"
            Margin="134,570,0,0"
            VerticalAlignment="Top"
                                      />
        <Button x:ConnectionId='2'
            x:Name="backBtn"
            Content="Back to login"
            HorizontalAlignment="Left"
            Margin="257,21,0,0"
            VerticalAlignment="Top"
                                  />
    </Grid>
</Page>

